<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s4.board.notice.NoticeDAO">
  
  <select id="getList" resultType="NoticeDTO" >
  		SELECT * FROM (SELECT rownum R, NC.* FROM(SELECT * FROM NOTICE ORDER BY num DESC) NC)
  	</select>
  	
  	<select id="getSelect" parameterType="BoardDTO" resultType="NoticeDTO">
  		SELECT * FROM NOTICE WHERE NUM=#{num}
  	</select>
  	
  	<insert id="setInsert" parameterType="BoardDTO">
  		INSERT INTO NOTICE VALUES(notice_seq.nextval,#{title},#{contents},#{writer},sysdate,0)
  	</insert>
  	
  	<delete id="setDelete" parameterType="BoardDTO">
  		DELETE NOTICE WHERE NUM=#{num}
  	</delete>
  	
  	<update id="setUpdate" parameterType="BoardDTO">
  		UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents}, REGDATE=sysdate
  		WHERE NUM =#{num}
  	</update> 
  
	
	  
  </mapper>